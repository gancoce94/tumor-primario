<% content_for :titulo do %>
  Historia Clinica
<% end %>
<% content_for :tituloPanel do %>
  Registro Completo
<% end 
    if notice.to_s != ""
%>

<div class="card-panel teal lighten-2">
  <% 
    asd = notice.split(/<>/) 
    asd.each do |item|
  %>
  <%= item %> <br>
  <% end %>
</div>
<% end %>
<div class="row">
  <p>
    <div class="input-field col s3 center-align">
      <b>Nombre:</b>
    </div>
    <div class="input-field col s3 center-align">
      <%= @tumor.name %>
    </div>
  </p>

  <p>
    <div class="input-field col s3 center-align">
      <b>Email:</b>
    </div>
    <div class="input-field col s3 center-align">
      <%= @tumor.email %>
    </div>
  </p>
</div>


<div class="row">
  <p>
    <div class="input-field col s3 center-align">
      <b>Edad:</b>
    </div>
    <div class="input-field col s3 center-align">
                <% if @tumor.edad %>
                  <% if @tumor.edad == ">30" %>
                    <%= "Menor a 30" %>
                  <% elsif @tumor.edad = "30-59" %>
                    <%= "De 30 a 59" %>
                  <% elsif @tumor.edad =="<60" %>
                    <%= "Mayor a 60" %>
                  <% end %>
                <% else %>
                  <%= "No se especifico la edad" %>
                <% end %>
    </div>
  </p>

  <p>
    <div class="input-field col s3 center-align">
      <b>Género:</b>
    </div>
    <div class="input-field col s3 center-align">
      <%= @tumor.genero.capitalize %>
    </div>
  </p>
</div>

